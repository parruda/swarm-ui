<div class="mt-4 mb-2 p-4 bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-750 rounded-lg border border-gray-200 dark:border-gray-700">
  <div class="flex items-center justify-between mb-2">
    <h4 class="text-sm font-semibold text-gray-900 dark:text-gray-100 flex items-center gap-2">
      <%= heroicon "check-badge", variant: :solid, options: { class: "h-5 w-5 text-green-600 dark:text-green-400" } %>
      Response Complete
    </h4>
    <div class="text-xs text-gray-500 dark:text-gray-400">
      Session: <span class="font-mono"><%= session_id.to_s.split('-').first %>...</span>
    </div>
  </div>
  
  <div class="grid grid-cols-3 gap-4 text-xs">
    <div>
      <span class="text-gray-500 dark:text-gray-400">Duration</span>
      <div class="font-medium text-gray-900 dark:text-gray-100">
        <%= number_with_delimiter(duration_ms) %>ms
      </div>
    </div>
    
    <% if turns.present? && turns > 0 %>
      <div>
        <span class="text-gray-500 dark:text-gray-400">Turns</span>
        <div class="font-medium text-gray-900 dark:text-gray-100">
          <%= turns %>
        </div>
      </div>
    <% end %>
    
    <% if cost.present? && cost > 0 %>
      <div>
        <span class="text-gray-500 dark:text-gray-400">Cost</span>
        <div class="font-medium text-gray-900 dark:text-gray-100">
          $<%= number_with_precision(cost, precision: 4) %>
        </div>
      </div>
    <% end %>
  </div>
</div>