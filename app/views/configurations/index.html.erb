<div class="py-6">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
    <%# Page Header %>
    <div class="md:flex md:items-center md:justify-between">
      <div class="min-w-0 flex-1">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
          Swarm Configurations
        </h2>
        <p class="mt-1 text-sm text-gray-500">
          Manage your saved swarm configurations
        </p>
      </div>
      <div class="mt-4 flex space-x-3 md:ml-4 md:mt-0">
        <%= link_to "Instance Templates", instance_templates_path,
            class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <%= link_to "New Configuration", new_configuration_path,
            class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
      </div>
    </div>

    <%# Configurations Grid %>
    <div class="mt-8">
      <% if @configurations.present? %>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <% @configurations.each do |config| %>
            <div class="relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm hover:border-gray-400 focus-within:ring-2 focus-within:ring-blue-500 focus-within:ring-offset-2">
              <%# Template Badge %>
              <% if config.is_template %>
                <div class="absolute top-4 right-4">
                  <span class="inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800">
                    Template
                  </span>
                </div>
              <% end %>

              <%# Configuration Info %>
              <div class="<%= config.is_template ? 'pr-20' : '' %>">
                <h3 class="text-base font-semibold text-gray-900">
                  <%= config.name %>
                </h3>
                <% if config.description.present? %>
                  <p class="mt-1 text-sm text-gray-500 line-clamp-2">
                    <%= config.description %>
                  </p>
                <% end %>
              </div>

              <%# Metadata %>
              <div class="mt-4 flex items-center text-sm text-gray-500">
                <svg class="mr-1.5 h-5 w-5 flex-shrink-0 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <%= pluralize(config.instance_count, 'instance') %>
                <span class="mx-2">â€¢</span>
                Updated <%= time_ago_in_words(config.updated_at) %> ago
              </div>

              <%# Actions %>
              <div class="mt-4 flex gap-2">
                <%= link_to "Launch", new_session_path(configuration_id: config.id),
                    class: "flex-1 rounded-md bg-green-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-green-500 text-center focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600" %>
                <%= link_to "Edit", edit_configuration_path(config),
                    class: "flex-1 rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 text-center" %>
                <%= button_to "Clone", clone_configuration_path(config),
                    method: :post,
                    class: "flex-1 rounded-md bg-blue-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 text-center cursor-pointer" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <%# Empty State %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold text-gray-900">No configurations</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating a new configuration.</p>
          <div class="mt-6">
            <%= link_to "New Configuration", new_configuration_path,
                class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>