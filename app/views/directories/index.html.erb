<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-6xl">
    <%# Header %>
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
          Frequently Used Directories
        </h1>
        <p class="mt-2 text-sm text-gray-700">
          Quick access to your most used project directories.
        </p>
      </div>
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <%= link_to "Add Directory", new_directory_path,
            class: "block rounded-md bg-blue-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
      </div>
    </div>

    <%# Directory List %>
    <% if @directories.any? %>
      <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% @directories.each do |directory| %>
          <div id="directory_<%= directory.id %>" class="directory-card relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm hover:shadow-md">
            <div class="flex items-start justify-between">
              <div class="min-w-0 flex-1">
                <h3 class="text-base font-semibold leading-6 text-gray-900">
                  <%= link_to directory.name, directory_path(directory), class: "hover:text-blue-600" %>
                </h3>
                <p class="mt-1 text-sm text-gray-500 truncate">
                  <%= directory.path %>
                </p>
                <% if directory.is_git_repository %>
                  <span class="git-badge badge inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800 mt-2">
                    Git
                  </span>
                <% end %>
                <% if directory.last_accessed_at %>
                  <p class="mt-2 text-xs text-gray-400">
                    Last accessed <%= time_ago_in_words(directory.last_accessed_at) %> ago
                  </p>
                <% end %>
              </div>
              <div class="ml-4 flex-shrink-0">
                <div class="relative inline-block text-left">
                  <button type="button" class="inline-flex items-center rounded-full p-2 text-gray-400 hover:text-gray-600" data-action="click->dropdown#toggle">
                    <span class="sr-only">Open options</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
            
            <div class="mt-4 flex items-center justify-between">
              <%= link_to "Open", directory_path(directory), 
                  class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
              
              <%= button_to "Remove", directory_path(directory), 
                  method: :delete,
                  data: { confirm: "Remove this directory from quick access?" },
                  class: "text-sm text-red-600 hover:text-red-500" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <%# Empty State %>
      <div class="mt-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">No directories added yet</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by adding your first project directory.</p>
        <div class="mt-6">
          <%= link_to "Add your first directory", new_directory_path,
              class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
        </div>
      </div>
    <% end %>
  </div>
</div>