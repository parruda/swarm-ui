<div class="py-6">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
    <%# Page Header %>
    <div class="md:flex md:items-center md:justify-between">
      <div class="min-w-0 flex-1">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
          Directories
        </h2>
        <p class="mt-1 text-sm text-gray-500">
          Frequently used directories for quick access
        </p>
      </div>
      <div class="mt-4 flex md:ml-4 md:mt-0">
        <%= link_to "Add Directory", new_directory_path,
            class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
      </div>
    </div>

    <%# Directories List %>
    <div class="mt-8">
      <% if @directories.present? %>
        <div class="overflow-hidden bg-white shadow sm:rounded-md">
          <ul role="list" class="divide-y divide-gray-200">
            <% @directories.each do |directory| %>
              <li>
                <div class="block hover:bg-gray-50 px-4 py-4 sm:px-6">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <% if directory.is_git_repository %>
                          <svg class="h-10 w-10 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                          </svg>
                        <% else %>
                          <svg class="h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                          </svg>
                        <% end %>
                      </div>
                      <div class="ml-4 flex-1">
                        <div class="flex items-center justify-between">
                          <p class="text-sm font-medium text-gray-900">
                            <%= directory.name || directory.path.split('/').last %>
                          </p>
                          <div class="ml-2 flex flex-shrink-0">
                            <% if directory.is_git_repository %>
                              <span class="inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800">
                                Git Repository
                              </span>
                            <% end %>
                          </div>
                        </div>
                        <p class="text-sm text-gray-500">
                          <%= directory.path %>
                        </p>
                        <div class="mt-2 flex items-center text-sm text-gray-500">
                          <% if directory.default_swarm_configuration %>
                            <svg class="mr-1.5 h-5 w-5 flex-shrink-0 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Default: <%= directory.default_swarm_configuration.name %>
                          <% else %>
                            <span class="text-gray-400">No default configuration</span>
                          <% end %>
                          <% if directory.last_accessed_at %>
                            <span class="mx-2">â€¢</span>
                            Last used <%= time_ago_in_words(directory.last_accessed_at) %> ago
                          <% end %>
                        </div>
                      </div>
                    </div>
                    <div class="ml-5 flex-shrink-0 flex gap-2">
                      <%= link_to "Launch", new_session_path(directory_path: directory.path),
                          class: "inline-flex items-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500" %>
                      <%= link_to "Edit", edit_directory_path(directory),
                          class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
                      <%= button_to "Remove", directory_path(directory),
                          method: :delete,
                          data: { confirm: "Remove this directory from quick access?" },
                          class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 cursor-pointer" %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <%# Empty State %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold text-gray-900">No directories</h3>
          <p class="mt-1 text-sm text-gray-500">Add frequently used directories for quick access.</p>
          <div class="mt-6">
            <%= link_to "Add Directory", new_directory_path,
                class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>