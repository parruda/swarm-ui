<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-3xl">
    <%# Header %>
    <div class="mb-8">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="min-w-0 flex-1">
          <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
            <%= @directory.name %>
          </h1>
          <p class="mt-2 text-sm text-gray-500">
            <%= @directory.path %>
          </p>
          <% if @directory.is_git_repository %>
            <span class="mt-2 inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800">
              Git Repository
            </span>
          <% end %>
        </div>
        <div class="mt-4 flex sm:ml-4 sm:mt-0">
          <%= link_to "Edit", edit_directory_path(@directory), 
              class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= link_to "Launch New Session", new_session_path(directory_path: @directory.path),
              class: "ml-3 inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
        </div>
      </div>
    </div>

    <%# Directory Info %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <% if @directory.default_swarm_configuration %>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Default Configuration</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to @directory.default_swarm_configuration.name, 
                    configuration_path(@directory.default_swarm_configuration),
                    class: "text-blue-600 hover:text-blue-500" %>
              </dd>
            </div>
          <% end %>
          
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Type</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @directory.is_git_repository ? "Git Repository" : "Regular Directory" %>
            </dd>
          </div>
          
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Last Accessed</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @directory.last_accessed_at %>
                <%= @directory.last_accessed_at.strftime("%B %d, %Y at %I:%M %p") %>
              <% else %>
                Never
              <% end %>
            </dd>
          </div>
          
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Added</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @directory.created_at.strftime("%B %d, %Y") %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <%# Configuration Files %>
    <% if @config_files&.any? %>
      <div class="mt-6 bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Configuration Files</h3>
          <ul class="divide-y divide-gray-200">
            <% @config_files.each do |file| %>
              <li class="py-3">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-900"><%= file %></span>
                  <%= link_to "Use this config", new_session_path(directory_path: @directory.path, config_path: File.join(@directory.path, file)),
                      class: "text-sm text-blue-600 hover:text-blue-500" %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <%# Recent Sessions %>
    <% if @sessions&.any? %>
      <div class="mt-6 bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Recent Sessions</h3>
          <div class="overflow-hidden">
            <table class="min-w-full divide-y divide-gray-300">
              <thead>
                <tr>
                  <th scope="col" class="py-3.5 pl-0 pr-3 text-left text-sm font-semibold text-gray-900">Session ID</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Swarm Name</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                  <th scope="col" class="relative py-3.5 pl-3 pr-0">
                    <span class="sr-only">View</span>
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @sessions.each do |session| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-0 pr-3 text-sm font-medium text-gray-900">
                      <%= session.session_id %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= session.swarm_name %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm">
                      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= session.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= session.status %>
                      </span>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-0 text-right text-sm font-medium">
                      <%= link_to "View", session_path(session.session_id), class: "text-blue-600 hover:text-blue-900" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>

    <%# Actions %>
    <div class="mt-6 flex justify-between">
      <%= link_to "â† Back to Directories", directories_path, 
          class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
      
      <%= button_to "Remove from Quick Access", directory_path(@directory), 
          method: :delete,
          data: { confirm: "Remove this directory from quick access?" },
          class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600",
          form_class: "inline" %>
    </div>
  </div>
</div>