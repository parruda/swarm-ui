<% content_for :title, "Instance Templates" %>

<div class="py-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-base font-semibold leading-6 text-gray-900 dark:text-gray-100 flex items-center">
          <%= heroicon "cube", variant: :outline, options: { class: "h-5 w-5 mr-2" } %>
          Instance Templates
        </h1>
        <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">Reusable AI agent configurations for your swarms.</p>
      </div>
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <%= link_to new_instance_template_path, class: "inline-flex items-center justify-center gap-x-1.5 rounded-md bg-orange-900 dark:bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 dark:hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900 dark:focus-visible:outline-orange-900 transition-colors duration-200" do %>
          <%= heroicon "plus", variant: :mini, options: { class: "h-5 w-5" } %>
          New Template
        <% end %>
      </div>
    </div>
    
    <!-- Search Bar -->
    <div class="mt-6">
      <%= form_with url: instance_templates_path, method: :get, 
                    data: { 
                      controller: "live-search",
                      turbo_frame: "templates_list",
                      turbo_action: "advance"
                    },
                    class: "flex gap-2" do |f| %>
        <div class="relative flex-1 max-w-lg">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <%= heroicon "magnifying-glass", variant: :mini, options: { class: "h-5 w-5 text-gray-400" } %>
          </div>
          <%= text_field_tag :search, params[:search], 
              placeholder: "Search templates by name, description, tags, or content...",
              data: { 
                live_search_target: "input",
                action: "input->live-search#search keydown->live-search#submitNow"
              },
              class: "block w-full rounded-md border border-gray-300 dark:border-gray-600 py-2 pl-10 pr-3 text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-700 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:outline-none focus:border-orange-500 dark:focus:border-orange-400 focus:ring-1 focus:ring-orange-500 dark:focus:ring-orange-400 sm:text-sm sm:leading-6 transition-colors duration-200" %>
          <%= hidden_field_tag :category, params[:category] if params[:category].present? %>
        </div>
        <% if params[:search].present? %>
          <%= link_to instance_templates_path(category: params[:category]), 
              data: { turbo_frame: "_top" },
              class: "inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
            <%= heroicon "x-mark", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
            Clear
          <% end %>
        <% end %>
      <% end %>
    </div>

    <%= turbo_frame_tag "templates_list" do %>
    <!-- Category Filter Tabs -->
    <div class="mt-8">
      <div class="border-b border-gray-200 dark:border-gray-700">
        <nav class="-mb-px flex space-x-8 overflow-x-auto" aria-label="Tabs">
          <%= link_to instance_templates_path(search: params[:search]), 
                      data: { turbo_frame: "templates_list", turbo_action: "advance" },
                      class: "#{params[:category].blank? ? 'border-orange-900 dark:border-orange-500 text-orange-900 dark:text-orange-400' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-600 hover:text-gray-700 dark:hover:text-gray-200'} whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium transition-colors duration-200" do %>
            <%= heroicon "squares-2x2", variant: :mini, options: { class: "h-4 w-4 inline mr-1" } %>
            All
            <span class="ml-2 rounded-full <%= params[:category].blank? ? 'bg-orange-100 dark:bg-orange-900/30 text-orange-900 dark:text-orange-400' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400' %> px-2.5 py-0.5 text-xs font-medium"><%= @instance_templates.count %></span>
          <% end %>
          <% InstanceTemplate::CATEGORIES.each do |category| %>
            <%= link_to instance_templates_path(category: category, search: params[:search]), 
                        data: { turbo_frame: "templates_list", turbo_action: "advance" },
                        class: "#{params[:category] == category ? 'border-orange-900 dark:border-orange-500 text-orange-900 dark:text-orange-400' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-600 hover:text-gray-700 dark:hover:text-gray-200'} whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium transition-colors duration-200" do %>
              <% icon = case category
                        when "frontend" then "window"
                        when "backend" then "server-stack"
                        when "security" then "shield-check"
                        when "database" then "circle-stack"
                        when "devops" then "command-line"
                        when "testing" then "beaker"
                        else "folder"
                        end %>
              <%= heroicon icon, variant: :mini, options: { class: "h-4 w-4 inline mr-1" } %>
              <%= category.capitalize %>
              <span class="ml-2 rounded-full <%= params[:category] == category ? 'bg-orange-100 dark:bg-orange-900/30 text-orange-900 dark:text-orange-400' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400' %> px-2.5 py-0.5 text-xs font-medium">
                <%= InstanceTemplate.by_category(category).count %>
              </span>
            <% end %>
          <% end %>
        </nav>
      </div>
    </div>

    <% if params[:search].present? %>
      <div class="mt-6 flex items-center gap-2">
        <span class="text-sm text-gray-600 dark:text-gray-400">
          Found <%= pluralize(@instance_templates.count, 'template') %> matching "<%= params[:search] %>"
        </span>
      </div>
    <% end %>

    <% if @instance_templates.any? %>
      <div class="mt-8 space-y-4">
        <% @instance_templates.each do |template| %>
          <div class="bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg p-6 border border-gray-200 dark:border-gray-700 transition-colors duration-200">
            <div class="flex items-center justify-between">
              <div class="flex items-start space-x-8 flex-1">
                <div class="min-w-0">
                  <div class="flex items-center space-x-3">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">
                      <%= link_to template.name, instance_template_path(template), class: "hover:text-orange-900 dark:hover:text-orange-400" %>
                    </h3>
                    <% if template.provider == "claude" %>
                      <span class="inline-flex items-center rounded-md bg-purple-50 dark:bg-purple-900/30 text-purple-700 dark:text-purple-400 ring-purple-600/20 dark:ring-purple-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset flex-shrink-0">
                        <%= heroicon "sparkles", variant: :mini, options: { class: "h-3 w-3 mr-1" } %>
                        Claude
                      </span>
                    <% elsif template.provider == "openai" %>
                      <span class="inline-flex items-center rounded-md bg-green-50 dark:bg-green-900/30 text-green-700 dark:text-green-400 ring-green-600/20 dark:ring-green-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset flex-shrink-0">
                        <%= heroicon "sparkles", variant: :mini, options: { class: "h-3 w-3 mr-1" } %>
                        OpenAI
                      </span>
                    <% end %>
                    <% if template.model.present? %>
                      <span class="inline-flex items-center rounded-md bg-gray-50 dark:bg-gray-900/30 text-gray-700 dark:text-gray-400 ring-gray-600/20 dark:ring-gray-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset flex-shrink-0">
                        <%= heroicon "cpu-chip", variant: :mini, options: { class: "h-3 w-3 mr-1" } %>
                        <%= template.model %>
                      </span>
                    <% end %>
                    <% if template.vibe %>
                      <span class="inline-flex items-center rounded-md bg-orange-50 dark:bg-orange-900/30 text-orange-700 dark:text-orange-400 ring-orange-600/20 dark:ring-orange-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset flex-shrink-0">
                        <%= heroicon "musical-note", variant: :mini, options: { class: "h-3 w-3 mr-1" } %>
                        Vibe
                      </span>
                    <% end %>
                    <% if template.worktree %>
                      <span class="inline-flex items-center rounded-md bg-indigo-50 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-400 ring-indigo-600/20 dark:ring-indigo-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset flex-shrink-0">
                        <%= heroicon "arrow-path", variant: :mini, options: { class: "h-3 w-3 mr-1" } %>
                        Worktree
                      </span>
                    <% end %>
                  </div>
                  <% if template.description.present? %>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                      <%= template.description %>
                    </p>
                  <% end %>
                  <% if template.category.present? %>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                      <span class="font-semibold">Category:</span> <%= template.category.capitalize %>
                    </p>
                  <% end %>
                  <% if template.allowed_tools.any? %>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                      <span class="font-semibold">Tools:</span> 
                      <% if template.allowed_tools.length == InstanceTemplate::AVAILABLE_TOOLS.length %>
                        All tools enabled
                      <% else %>
                        <%= template.allowed_tools.join(", ") %>
                      <% end %>
                    </p>
                  <% end %>
                  <% if template.tags.present? && template.tags.any? %>
                    <div class="flex items-center gap-1 mt-2">
                      <% template.tags.each do |tag| %>
                        <span class="inline-flex items-center rounded bg-gray-100 dark:bg-gray-700 px-2 py-0.5 text-xs font-medium text-gray-600 dark:text-gray-300">
                          <%= tag %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                
                <div class="flex items-center space-x-6 text-sm text-gray-600 dark:text-gray-400">
                  <div>
                    <span class="font-medium">Used in:</span> 
                    <span class="text-green-600 dark:text-green-400"><%= pluralize(template.swarm_template_instances.count, 'swarm') %></span>
                  </div>
                  <% if template.usage_count && template.usage_count > 0 %>
                    <div>
                      <span class="font-medium">Usage count:</span> <%= template.usage_count %>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="flex items-center space-x-2 ml-4 flex-shrink-0">
                <%= link_to instance_template_path(template), class: "inline-flex items-center justify-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
                  <%= heroicon "eye", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
                  View
                <% end %>
                <%= link_to edit_instance_template_path(template), class: "inline-flex items-center justify-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-600 dark:text-gray-300 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
                  <%= heroicon "pencil", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
                  Edit
                <% end %>
                <% unless template.swarm_template_instances.any? %>
                  <%= link_to instance_template_path(template),
                      data: { 
                        "turbo-method": :delete,
                        "turbo-confirm": "Are you sure you want to delete this template?" 
                      },
                      class: "inline-flex items-center justify-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-red-600 dark:text-red-400 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors duration-200" do %>
                    <%= heroicon "trash", variant: :mini, options: { class: "h-4 w-4" } %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="mt-8 text-center">
        <div class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500">
          <%= heroicon 'cube', variant: :outline, options: { class: "h-12 w-12" } %>
        </div>
        <h3 class="mt-2 text-sm font-semibold text-gray-900 dark:text-gray-100">
          No instance templates
        </h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          Get started by creating a new instance template.
        </p>
        <div class="mt-6">
          <%= link_to new_instance_template_path, class: "inline-flex items-center rounded-md bg-orange-900 dark:bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 dark:hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900 dark:focus-visible:outline-orange-900 transition-colors duration-200" do %>
            <%= heroicon "plus", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
            Create Template
          <% end %>
        </div>
      </div>
    <% end %>
    <% end %><%# End turbo_frame_tag %>
  </div>
</div>