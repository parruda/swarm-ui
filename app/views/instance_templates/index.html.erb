<div class="py-6">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
    <%# Page Header %>
    <div class="md:flex md:items-center md:justify-between">
      <div class="min-w-0 flex-1">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
          Instance Templates
        </h2>
        <p class="mt-1 text-sm text-gray-500">
          Reusable templates for swarm instances
        </p>
      </div>
      <div class="mt-4 flex md:ml-4 md:mt-0">
        <%= link_to "New Template", new_instance_template_path,
            class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
      </div>
    </div>

    <%# Templates List %>
    <div class="mt-8">
      <% if @instance_templates.present? %>
        <%# Group templates by type %>
        <% grouped_templates = @instance_templates.group_by(&:instance_type) %>
        
        <div class="space-y-8">
          <% grouped_templates.each do |type, templates| %>
            <div>
              <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">
                <%= type.humanize %> Templates
              </h3>
              
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                <% templates.each do |template| %>
                  <div class="relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm hover:border-gray-400">
                    <%# Provider Badge %>
                    <div class="absolute top-4 right-4">
                      <% if template.provider == 'openai' %>
                        <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                          OpenAI
                        </span>
                      <% else %>
                        <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                          Claude
                        </span>
                      <% end %>
                    </div>

                    <%# Template Info %>
                    <div class="pr-20">
                      <h4 class="text-base font-semibold text-gray-900">
                        <%= template.name %>
                      </h4>
                      <% if template.description.present? %>
                        <p class="mt-1 text-sm text-gray-500 line-clamp-2">
                          <%= template.description %>
                        </p>
                      <% end %>
                    </div>

                    <%# Metadata %>
                    <div class="mt-3 flex flex-wrap gap-2 text-xs">
                      <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-1 text-gray-600">
                        Model: <%= template.model %>
                      </span>
                      <% if template.vibe %>
                        <span class="inline-flex items-center rounded-full bg-purple-100 px-2 py-1 text-purple-700">
                          Vibe Mode
                        </span>
                      <% end %>
                      <% if template.allowed_tools.present? %>
                        <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-1 text-gray-600">
                          <%= template.allowed_tools.size %> tools
                        </span>
                      <% end %>
                    </div>

                    <%# Actions %>
                    <div class="mt-4 flex gap-2">
                      <%= link_to "View", instance_template_path(template),
                          class: "flex-1 rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 text-center" %>
                      <%= link_to "Edit", edit_instance_template_path(template),
                          class: "flex-1 rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 text-center" %>
                      <%= button_to "Delete", instance_template_path(template),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this template?" },
                          class: "flex-1 rounded-md bg-red-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-red-500 text-center cursor-pointer" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <%# Empty State %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold text-gray-900">No templates</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating instance templates for your swarms.</p>
          <div class="mt-6">
            <%= link_to "New Template", new_instance_template_path,
                class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>