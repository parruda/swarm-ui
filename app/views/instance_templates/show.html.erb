<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-3xl">
    <%# Header %>
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div class="sm:flex-auto">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
          <%= @instance_template.name %>
        </h1>
        <p class="mt-2 text-sm text-gray-700">
          Instance template for claude-swarm agents
        </p>
      </div>
      <div class="mt-4 flex items-center gap-4 sm:ml-16 sm:mt-0">
        <%= link_to "Edit", edit_instance_template_path(@instance_template), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <%= link_to "Back to Templates", instance_templates_path, class: "text-sm font-semibold leading-6 text-gray-900 hover:text-gray-600" %>
      </div>
    </div>

    <%# Template Details %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Template Details</h3>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @instance_template.name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Created At</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @instance_template.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @instance_template.description.presence || content_tag(:span, "No description provided", class: "text-gray-400 italic") %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <%# Prompt %>
    <div class="bg-white shadow sm:rounded-lg mt-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Prompt</h3>
        <div class="bg-gray-50 rounded-md p-4">
          <pre class="text-sm text-gray-700 whitespace-pre-wrap font-mono"><%= @instance_template.prompt %></pre>
        </div>
      </div>
    </div>

    <%# Tool Configuration %>
    <div class="bg-white shadow sm:rounded-lg mt-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Tool Configuration</h3>
        
        <% if @instance_template.allowed_tools.present? %>
          <div class="mb-4">
            <h4 class="text-sm font-medium text-gray-700 mb-2">Allowed Tools</h4>
            <div class="flex flex-wrap gap-2">
              <% @instance_template.allowed_tools.each do |tool| %>
                <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                  <%= tool %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <% if @instance_template.disallowed_tools.present? %>
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">Disallowed Tools</h4>
            <div class="flex flex-wrap gap-2">
              <% @instance_template.disallowed_tools.each do |tool| %>
                <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/20">
                  <%= tool %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <% if @instance_template.allowed_tools.blank? && @instance_template.disallowed_tools.blank? %>
          <p class="text-sm text-gray-500 italic">No tool restrictions configured</p>
        <% end %>
      </div>
    </div>

    <%# Used By Configurations %>
    <% configurations = SwarmConfiguration.joins(:swarm_instance_templates).where(swarm_instance_templates: { instance_template_id: @instance_template.id }) %>
    <% if configurations.any? %>
      <div class="bg-white shadow sm:rounded-lg mt-6">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Used by Configurations</h3>
          <ul class="divide-y divide-gray-200">
            <% configurations.distinct.each do |config| %>
              <li class="py-3">
                <%= link_to config.name, configuration_path(config), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
                <p class="text-sm text-gray-500"><%= config.description %></p>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>