<% content_for :title, @instance_template.name %>

<div class="py-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header with actions -->
    <div class="mb-6">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="sm:flex-auto">
          <nav class="flex mb-4" aria-label="Breadcrumb">
            <%= link_to instance_templates_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" do %>
              Instance Templates
            <% end %>
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= @instance_template.name %></span>
          </nav>
          
          <h1 class="text-2xl font-bold leading-7 text-gray-900 dark:text-gray-100 sm:truncate sm:text-3xl sm:tracking-tight flex items-center">
            <%= heroicon "cube", variant: :solid, options: { class: "h-8 w-8 mr-3 text-orange-600 dark:text-orange-400" } %>
            <%= @instance_template.name %>
          </h1>
          <% if @instance_template.description.present? %>
            <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">
              <%= @instance_template.description %>
            </p>
          <% end %>
        </div>
        
        <div class="mt-5 flex lg:ml-4 lg:mt-0 gap-2">
          <%= link_to duplicate_instance_template_path(@instance_template), method: :post,
              class: "inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
            <%= heroicon "document-duplicate", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
            Duplicate
          <% end %>
          
          <%= link_to edit_instance_template_path(@instance_template),
              class: "inline-flex items-center rounded-md bg-orange-900 dark:bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 dark:hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900 dark:focus-visible:outline-orange-900 transition-colors duration-200" do %>
            <%= heroicon "pencil", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
            Edit
          <% end %>
          
          <% unless @instance_template.swarm_template_instances.any? %>
            <%= link_to instance_template_path(@instance_template),
                data: { 
                  "turbo-method": :delete,
                  "turbo-confirm": "Are you sure you want to delete this template?" 
                },
                class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600 transition-colors duration-200" do %>
              <%= heroicon "trash", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
              Delete
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Badges -->
    <div class="mb-6 flex flex-wrap gap-2">
      <% if @instance_template.provider == "claude" %>
        <span class="inline-flex items-center rounded-md bg-purple-50 dark:bg-purple-900/30 text-purple-700 dark:text-purple-400 ring-purple-600/20 dark:ring-purple-400/30 px-3 py-1 text-sm font-medium ring-1 ring-inset">
          <%= heroicon "sparkles", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
          Claude Provider
        </span>
      <% elsif @instance_template.provider == "openai" %>
        <span class="inline-flex items-center rounded-md bg-green-50 dark:bg-green-900/30 text-green-700 dark:text-green-400 ring-green-600/20 dark:ring-green-400/30 px-3 py-1 text-sm font-medium ring-1 ring-inset">
          <%= heroicon "sparkles", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
          OpenAI Provider
        </span>
      <% end %>
      
      <% if @instance_template.model.present? %>
        <span class="inline-flex items-center rounded-md bg-gray-50 dark:bg-gray-900/30 text-gray-700 dark:text-gray-400 ring-gray-600/20 dark:ring-gray-400/30 px-3 py-1 text-sm font-medium ring-1 ring-inset">
          <%= heroicon "cpu-chip", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
          Model: <%= @instance_template.model %>
        </span>
      <% end %>
      
      
      <% if @instance_template.vibe %>
        <span class="inline-flex items-center rounded-md bg-orange-50 dark:bg-orange-900/30 text-orange-700 dark:text-orange-400 ring-orange-600/20 dark:ring-orange-400/30 px-3 py-1 text-sm font-medium ring-1 ring-inset">
          <%= heroicon "musical-note", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
          Vibe Mode
        </span>
      <% end %>
      
      <% if @instance_template.worktree %>
        <span class="inline-flex items-center rounded-md bg-cyan-50 dark:bg-cyan-900/30 text-cyan-700 dark:text-cyan-400 ring-cyan-600/20 dark:ring-cyan-400/30 px-3 py-1 text-sm font-medium ring-1 ring-inset">
          <%= heroicon "arrow-path", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
          Worktree Enabled
        </span>
      <% end %>
    </div>

    <!-- Main content grid -->
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      <!-- Configuration Details (2 columns) -->
      <div class="lg:col-span-2">
        <div class="bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Configuration Details</h2>
          </div>
          <div class="px-6 py-4">
            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Provider</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @instance_template.provider&.capitalize || "Not specified" %></dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Model</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @instance_template.model || "Not specified" %></dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Directory</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 font-mono bg-gray-50 dark:bg-gray-700 px-2 py-1 rounded"><%= @instance_template.directory || "." %></dd>
              </div>
              
              
              <% if @instance_template.temperature.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Temperature</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @instance_template.temperature %></dd>
              </div>
              <% end %>
              
              <% if @instance_template.api_version.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">API Version</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @instance_template.api_version %></dd>
              </div>
              <% end %>
              
              <% if @instance_template.reasoning_effort.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Reasoning Effort</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @instance_template.reasoning_effort %></dd>
              </div>
              <% end %>
              
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">System Prompt</dt>
                <dd class="mt-1">
                  <% if @instance_template.system_prompt.present? %>
                    <pre class="text-sm text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-700 p-4 rounded-lg overflow-x-auto whitespace-pre-wrap"><%= @instance_template.system_prompt %></pre>
                  <% else %>
                    <span class="text-sm text-gray-500 dark:text-gray-400 italic">No system prompt defined</span>
                  <% end %>
                </dd>
              </div>
              
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Allowed Tools</dt>
                <dd class="mt-1">
                  <% if @instance_template.allowed_tools.present? && @instance_template.allowed_tools.any? %>
                    <% if @instance_template.allowed_tools.length == InstanceTemplate::AVAILABLE_TOOLS.length %>
                      <span class="inline-flex items-center rounded-md bg-green-50 dark:bg-green-900/30 text-green-700 dark:text-green-400 ring-green-600/20 dark:ring-green-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset">
                        All tools enabled
                      </span>
                    <% else %>
                      <div class="flex flex-wrap gap-1">
                        <% @instance_template.allowed_tools.each do |tool| %>
                          <span class="inline-flex items-center rounded-md bg-gray-100 dark:bg-gray-700 px-2 py-1 text-xs font-medium text-gray-700 dark:text-gray-300">
                            <%= tool %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  <% else %>
                    <span class="text-sm text-gray-500 dark:text-gray-400 italic">No tools configured</span>
                  <% end %>
                </dd>
              </div>
              
              <% if @instance_template.tags.present? && @instance_template.tags.any? %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Tags</dt>
                <dd class="mt-1">
                  <div class="flex flex-wrap gap-1">
                    <% @instance_template.tags.each do |tag| %>
                      <span class="inline-flex items-center rounded bg-gray-100 dark:bg-gray-700 px-2 py-1 text-xs font-medium text-gray-600 dark:text-gray-300">
                        <%= tag %>
                      </span>
                    <% end %>
                  </div>
                </dd>
              </div>
              <% end %>
              
              <% if @instance_template.required_variables.present? && @instance_template.required_variables.any? %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Required Variables</dt>
                <dd class="mt-1">
                  <div class="flex flex-wrap gap-1">
                    <% @instance_template.required_variables.each do |var| %>
                      <span class="inline-flex items-center rounded-md bg-yellow-50 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400 ring-yellow-600/20 dark:ring-yellow-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset font-mono">
                        ${<%= var %>}
                      </span>
                    <% end %>
                  </div>
                </dd>
              </div>
              <% end %>
            </dl>
          </div>
        </div>
        
        <!-- Raw Configuration -->
        <div class="mt-6 bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Raw Configuration (YAML)</h2>
            <button type="button" 
                    onclick="navigator.clipboard.writeText(this.dataset.yaml)"
                    data-yaml="<%= @instance_template.to_instance_config.to_yaml.html_safe %>"
                    class="inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-2.5 py-1.5 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200">
              <%= heroicon "clipboard-document", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
              Copy
            </button>
          </div>
          <div class="px-6 py-4">
            <pre class="text-sm text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto font-mono"><%= @instance_template.to_instance_config.to_yaml %></pre>
          </div>
        </div>
      </div>

      <!-- Sidebar (1 column) -->
      <div class="lg:col-span-1">
        <!-- Usage Statistics -->
        <div class="bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Usage Statistics</h2>
          </div>
          <div class="px-6 py-4">
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Used in Swarms</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900 dark:text-gray-100">
                  <%= @instance_template.swarm_template_instances.count %>
                </dd>
              </div>
              <% if @instance_template.usage_count && @instance_template.usage_count > 0 %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Usage Count</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900 dark:text-gray-100">
                  <%= @instance_template.usage_count %>
                </dd>
              </div>
              <% end %>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Created</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                  <%= @instance_template.created_at.strftime("%B %d, %Y") %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Last Updated</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                  <%= time_ago_in_words(@instance_template.updated_at) %> ago
                </dd>
              </div>
            </dl>
          </div>
        </div>
        
        <!-- Swarms Using This Template -->
        <% if @swarm_templates && @swarm_templates.any? %>
        <div class="mt-6 bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Swarms Using This Template</h2>
          </div>
          <div class="px-6 py-4">
            <ul class="space-y-3">
              <% @swarm_templates.each do |swarm| %>
                <li class="flex items-center justify-between">
                  <div class="flex items-center">
                    <%= heroicon "beaker", variant: :mini, options: { class: "h-4 w-4 mr-2 text-gray-400" } %>
                    <span class="text-sm text-gray-900 dark:text-gray-100"><%= swarm.name %></span>
                  </div>
                  <% if swarm.project.present? %>
                    <span class="text-xs text-gray-500 dark:text-gray-400">
                      <%= swarm.project.name %>
                    </span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <% end %>
        
        <% if @instance_template.metadata.present? && @instance_template.metadata.any? %>
        <div class="mt-6 bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Metadata</h2>
          </div>
          <div class="px-6 py-4">
            <pre class="text-sm text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto font-mono"><%= JSON.pretty_generate(@instance_template.metadata) %></pre>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>