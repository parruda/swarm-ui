<% content_for :title, "New MCP Server" %>

<div class="py-8">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <nav class="flex mb-4" aria-label="Breadcrumb">
        <%= link_to mcp_servers_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" do %>
          MCP Servers
        <% end %>
        <span class="mx-2 text-gray-400">/</span>
        <span class="text-sm font-medium text-gray-900 dark:text-gray-100">New</span>
      </nav>
      
      <h1 class="text-2xl font-bold leading-7 text-gray-900 dark:text-gray-100 sm:truncate sm:text-3xl sm:tracking-tight flex items-center">
        <%= heroicon "server-stack", variant: :solid, options: { class: "h-8 w-8 mr-3 text-orange-600 dark:text-orange-400" } %>
        New MCP Server
      </h1>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
        Configure a new Model Context Protocol server for your AI instances.
      </p>
    </div>

    <div class="bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
      <%= render "form", mcp_server: @mcp_server %>
    </div>
  </div>
</div>