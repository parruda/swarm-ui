<% content_for :title, @mcp_server.name %>

<div class="py-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header with actions -->
    <div class="mb-6">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="sm:flex-auto">
          <nav class="flex mb-4" aria-label="Breadcrumb">
            <%= link_to mcp_servers_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" do %>
              MCP Servers
            <% end %>
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= @mcp_server.name %></span>
          </nav>
          
          <h1 class="text-2xl font-bold leading-7 text-gray-900 dark:text-gray-100 sm:truncate sm:text-3xl sm:tracking-tight flex items-center">
            <%= heroicon "server-stack", variant: :solid, options: { class: "h-8 w-8 mr-3 text-orange-600 dark:text-orange-400" } %>
            <%= @mcp_server.name %>
          </h1>
          <% if @mcp_server.description.present? %>
            <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">
              <%= @mcp_server.description %>
            </p>
          <% end %>
        </div>
        
        <div class="mt-5 flex lg:ml-4 lg:mt-0 gap-2">
          <%= link_to export_mcp_server_path(@mcp_server, format: :json),
              class: "inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
            <%= heroicon "arrow-up-tray", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
            Export
          <% end %>
          
          <%= link_to duplicate_mcp_server_path(@mcp_server), 
              data: { "turbo-method": :post },
              class: "inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
            <%= heroicon "document-duplicate", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
            Duplicate
          <% end %>
          
          <%= link_to edit_mcp_server_path(@mcp_server),
              class: "inline-flex items-center rounded-md bg-orange-900 dark:bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 dark:hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900 dark:focus-visible:outline-orange-900 transition-colors duration-200" do %>
            <%= heroicon "pencil", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
            Edit
          <% end %>
          
          <%= link_to mcp_server_path(@mcp_server),
              data: { 
                "turbo-method": :delete,
                "turbo-confirm": "Are you sure you want to delete this MCP server?" 
              },
              class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600 transition-colors duration-200" do %>
            <%= heroicon "trash", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
            Delete
          <% end %>
        </div>
      </div>
    </div>

    <!-- Badges -->
    <div class="mb-6 flex flex-wrap gap-2">
      <% if @mcp_server.stdio? %>
        <span class="inline-flex items-center rounded-md bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400 ring-blue-600/20 dark:ring-blue-400/30 px-3 py-1 text-sm font-medium ring-1 ring-inset">
          <%= heroicon "command-line", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
          STDIO Server
        </span>
      <% elsif @mcp_server.sse? %>
        <span class="inline-flex items-center rounded-md bg-green-50 dark:bg-green-900/30 text-green-700 dark:text-green-400 ring-green-600/20 dark:ring-green-400/30 px-3 py-1 text-sm font-medium ring-1 ring-inset">
          <%= heroicon "signal", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
          SSE Server
        </span>
      <% end %>
    </div>

    <!-- Main content grid -->
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      <!-- Configuration Details (2 columns) -->
      <div class="lg:col-span-2">
        <div class="bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Configuration Details</h2>
          </div>
          <div class="px-6 py-4">
            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Server Type</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @mcp_server.server_type_display %></dd>
              </div>
              
              <% if @mcp_server.stdio? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Command</dt>
                  <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 font-mono bg-gray-50 dark:bg-gray-700 px-2 py-1 rounded"><%= @mcp_server.command %></dd>
                </div>
                
                <% if @mcp_server.args.present? && @mcp_server.args.any? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Arguments</dt>
                  <dd class="mt-1">
                    <div class="flex flex-wrap gap-1">
                      <% @mcp_server.args.each do |arg| %>
                        <span class="inline-flex items-center rounded-md bg-gray-100 dark:bg-gray-700 px-2 py-1 text-xs font-medium text-gray-700 dark:text-gray-300 font-mono">
                          <%= arg %>
                        </span>
                      <% end %>
                    </div>
                  </dd>
                </div>
                <% end %>
                
                <% if @mcp_server.env.present? && @mcp_server.env.any? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Environment Variables</dt>
                  <dd class="mt-1">
                    <pre class="text-sm text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-700 p-4 rounded-lg overflow-x-auto font-mono"><% @mcp_server.env.each do |key, value| %><%= key %>=<%= value %>
<% end %></pre>
                  </dd>
                </div>
                <% end %>
              <% elsif @mcp_server.sse? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">URL</dt>
                  <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 font-mono bg-gray-50 dark:bg-gray-700 px-2 py-1 rounded break-all"><%= @mcp_server.url %></dd>
                </div>
                
                <% if @mcp_server.headers.present? && @mcp_server.headers.any? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Headers</dt>
                  <dd class="mt-1">
                    <pre class="text-sm text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-700 p-4 rounded-lg overflow-x-auto font-mono"><% @mcp_server.headers.each do |key, value| %><%= key %>: <%= value %>
<% end %></pre>
                  </dd>
                </div>
                <% end %>
              <% end %>
              
              <% if @mcp_server.tags.present? && @mcp_server.tags.any? %>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Tags</dt>
                <dd class="mt-1">
                  <div class="flex flex-wrap gap-1">
                    <% @mcp_server.tags.each do |tag| %>
                      <span class="inline-flex items-center rounded bg-gray-100 dark:bg-gray-700 px-2 py-1 text-xs font-medium text-gray-600 dark:text-gray-300">
                        <%= tag %>
                      </span>
                    <% end %>
                  </div>
                </dd>
              </div>
              <% end %>
            </dl>
          </div>
        </div>
        
        <!-- MCP Configuration Output -->
        <div class="mt-6 bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">MCP Configuration (YAML)</h2>
            <button type="button" 
                    onclick="navigator.clipboard.writeText(this.dataset.yaml)"
                    data-yaml="<%= html_escape(@mcp_server.to_mcp_config.to_yaml) %>"
                    class="inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-2.5 py-1.5 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200">
              <%= heroicon "clipboard-document", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
              Copy
            </button>
          </div>
          <div class="px-6 py-4">
            <pre class="text-sm text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto font-mono"><%= @mcp_server.to_mcp_config.to_yaml %></pre>
          </div>
        </div>
      </div>

      <!-- Sidebar (1 column) -->
      <div class="lg:col-span-1">
        <!-- Usage Statistics -->
        <div class="bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Statistics</h2>
          </div>
          <div class="px-6 py-4">
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Usage Count</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900 dark:text-gray-100">
                  <%= @mcp_server.usage_count %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Created</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                  <%= @mcp_server.created_at.strftime("%B %d, %Y") %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Last Updated</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                  <%= time_ago_in_words(@mcp_server.updated_at) %> ago
                </dd>
              </div>
            </dl>
          </div>
        </div>
        
        <% if @mcp_server.metadata.present? && @mcp_server.metadata.any? %>
        <div class="mt-6 bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Metadata</h2>
          </div>
          <div class="px-6 py-4">
            <pre class="text-sm text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto font-mono"><%= JSON.pretty_generate(@mcp_server.metadata) %></pre>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>