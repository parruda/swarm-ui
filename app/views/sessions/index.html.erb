<div class="py-6">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
    <%# Page Header %>
    <div class="md:flex md:items-center md:justify-between">
      <div class="min-w-0 flex-1">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
          Sessions
        </h2>
        <p class="mt-1 text-sm text-gray-500">
          Manage your Claude Swarm sessions
        </p>
      </div>
      <div class="mt-4 flex md:ml-4 md:mt-0">
        <%= link_to "Restore Session", restore_sessions_path,
            class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <%= link_to "New Session", new_session_path,
            class: "ml-3 inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
      </div>
    </div>

    <%# Sessions List %>
    <div class="mt-8">
      <% if @sessions.present? %>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <% @sessions.each do |session| %>
            <div class="relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm hover:border-gray-400">
              <%# Status Indicator %>
              <div class="absolute top-4 right-4">
                <% if session.status == 'active' %>
                  <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                    <span class="mr-1.5 flex h-2 w-2">
                      <span class="animate-pulse absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                    </span>
                    Active
                  </span>
                <% elsif session.status == 'completed' %>
                  <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                    Completed
                  </span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800">
                    <%= session.status.humanize %>
                  </span>
                <% end %>
              </div>

              <%# Session Info %>
              <div class="pr-16">
                <h3 class="text-base font-semibold text-gray-900">
                  <%= session.swarm_name || "Unnamed Swarm" %>
                </h3>
                <p class="mt-1 text-sm text-gray-500">
                  Session: <%= session.session_id %>
                </p>
                <p class="mt-1 text-xs text-gray-500">
                  Mode: <%= session.mode.humanize %>
                </p>
              </div>

              <%# Metadata %>
              <div class="mt-4 flex items-center justify-between text-sm text-gray-500">
                <div>
                  <% if session.created_at %>
                    Started <%= time_ago_in_words(session.created_at) %> ago
                  <% end %>
                </div>
                <% if session.respond_to?(:total_cost) && session.total_cost > 0 %>
                  <div class="text-right">
                    Cost: $<%= "%.4f" % session.total_cost %>
                  </div>
                <% end %>
              </div>

              <%# Actions %>
              <div class="mt-4 flex gap-2">
                <%= link_to "View", session_path(session.session_id),
                    class: "flex-1 rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 text-center" %>
                <% if session.status == 'active' %>
                  <% if session.mode == 'interactive' %>
                    <%= link_to "Terminal", session_terminal_path(session.session_id),
                        class: "flex-1 rounded-md bg-blue-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 text-center" %>
                  <% else %>
                    <%= link_to "Output", output_session_path(session.session_id),
                        class: "flex-1 rounded-md bg-blue-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 text-center" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <%# Empty State %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold text-gray-900">No sessions</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating a new session.</p>
          <div class="mt-6">
            <%= link_to "New Session", new_session_path,
                class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>