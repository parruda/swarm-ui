<nav class="flex items-center justify-between border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 px-4 py-3 sm:px-6 rounded-lg shadow-md" aria-label="Pagination">
  <div class="hidden sm:block">
    <p class="text-sm text-gray-700 dark:text-gray-300">
      Showing
      <span class="font-medium"><%= pagy.from %></span>
      to
      <span class="font-medium"><%= pagy.to %></span>
      of
      <span class="font-medium"><%= pagy.count %></span>
      results
    </p>
  </div>
  
  <div class="flex flex-1 justify-between sm:justify-end">
    <% if pagy.prev %>
      <%= link_to url_for(page: pagy.prev),
          class: "relative inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 focus:z-20 focus:outline-offset-0",
          data: { turbo_frame: "_top" } do %>
        <%= heroicon "chevron-left", variant: :solid, options: { class: "h-5 w-5" } %>
        <span class="sr-only">Previous</span>
      <% end %>
    <% else %>
      <span class="relative inline-flex items-center rounded-md bg-gray-100 dark:bg-gray-800 px-3 py-2 text-sm font-semibold text-gray-400 dark:text-gray-500 ring-1 ring-inset ring-gray-300 dark:ring-gray-700 cursor-not-allowed">
        <%= heroicon "chevron-left", variant: :solid, options: { class: "h-5 w-5" } %>
        <span class="sr-only">Previous</span>
      </span>
    <% end %>
    
    <div class="hidden md:flex items-center space-x-1 mx-4">
      <% pagy.series.each do |item| %>
        <% if item == :gap %>
          <span class="px-4 py-2 text-sm text-gray-500 dark:text-gray-400">···</span>
        <% elsif item == pagy.page %>
          <span class="relative z-10 inline-flex items-center bg-gradient-to-r from-orange-500 to-orange-600 px-4 py-2 text-sm font-semibold text-white rounded-md focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600">
            <%= item %>
          </span>
        <% else %>
          <%= link_to item, url_for(page: item),
              class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 rounded-md focus:z-20 focus:outline-offset-0",
              data: { turbo_frame: "_top" } %>
        <% end %>
      <% end %>
    </div>
    
    <% if pagy.next %>
      <%= link_to url_for(page: pagy.next),
          class: "relative ml-3 inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 focus:z-20 focus:outline-offset-0",
          data: { turbo_frame: "_top" } do %>
        <span class="sr-only">Next</span>
        <%= heroicon "chevron-right", variant: :solid, options: { class: "h-5 w-5" } %>
      <% end %>
    <% else %>
      <span class="relative ml-3 inline-flex items-center rounded-md bg-gray-100 dark:bg-gray-800 px-3 py-2 text-sm font-semibold text-gray-400 dark:text-gray-500 ring-1 ring-inset ring-gray-300 dark:ring-gray-700 cursor-not-allowed">
        <span class="sr-only">Next</span>
        <%= heroicon "chevron-right", variant: :solid, options: { class: "h-5 w-5" } %>
      </span>
    <% end %>
  </div>
</nav>