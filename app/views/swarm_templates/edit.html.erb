<% content_for :title, "Edit Swarm" %>

<div class="py-8" data-controller="swarm-builder">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <div>
              <%= link_to @swarm_template.project || root_path, class: "text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400" do %>
                <%= heroicon "folder", variant: :outline, options: { class: "h-5 w-5 flex-shrink-0" } %>
                <span class="sr-only"><%= @swarm_template.project&.name || "Home" %></span>
              <% end %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <%= heroicon "chevron-right", variant: :solid, options: { class: "h-5 w-5 flex-shrink-0 text-gray-400" } %>
              <%= link_to @swarm_template.name, @swarm_template, class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <%= heroicon "chevron-right", variant: :solid, options: { class: "h-5 w-5 flex-shrink-0 text-gray-400" } %>
              <span class="ml-4 text-sm font-medium text-gray-500 dark:text-gray-400">Edit</span>
            </div>
          </li>
        </ol>
      </nav>
      
      <h1 class="text-2xl font-bold leading-7 text-gray-900 dark:text-gray-100 sm:truncate sm:text-3xl sm:tracking-tight">Edit Swarm Template</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Modify your swarm configuration and instances</p>
    </div>

    <%= render 'form', swarm_template: @swarm_template %>
  </div>
</div>