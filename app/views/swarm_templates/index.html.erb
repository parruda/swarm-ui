<% content_for :title, "Swarms" %>

<div class="py-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-base font-semibold leading-6 text-gray-900 dark:text-gray-100 flex items-center">
          <%= heroicon "cube", variant: :outline, options: { class: "h-5 w-5 mr-2" } %>
          Swarms
        </h1>
        <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">Build and manage reusable AI agent configurations.</p>
      </div>
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <div class="relative inline-block text-left" data-controller="dropdown">
          <button type="button" 
                  data-action="click->dropdown#toggle"
                  data-dropdown-target="button"
                  class="inline-flex items-center justify-center gap-x-1.5 rounded-md bg-orange-900 dark:bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 dark:hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900 dark:focus-visible:outline-orange-900 transition-colors duration-200">
            <%= heroicon "plus", variant: :mini, options: { class: "h-5 w-5" } %>
            New
            <%= heroicon "chevron-down", variant: :mini, options: { class: "h-4 w-4 -mr-1 ml-1" } %>
          </button>
          
          <div data-dropdown-target="menu" 
               class="hidden absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white dark:bg-gray-800 shadow-lg ring-1 ring-black ring-opacity-5 dark:ring-gray-700 focus:outline-none">
            <div class="py-1" role="none">
              <% new_swarm_path = @project ? new_project_swarm_template_path(@project) : new_swarm_template_path %>
              <%= link_to new_swarm_path, 
                  class: "group flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                <%= heroicon "cube", variant: :outline, options: { class: "h-5 w-5 mr-3 text-gray-400 dark:text-gray-500 group-hover:text-gray-500 dark:group-hover:text-gray-400" } %>
                New Swarm
              <% end %>
              
              <%= link_to new_instance_template_path, 
                  class: "group flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
                <%= heroicon "puzzle-piece", variant: :outline, options: { class: "h-5 w-5 mr-3 text-gray-400 dark:text-gray-500 group-hover:text-gray-500 dark:group-hover:text-gray-400" } %>
                New Instance Template
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="mt-8">
      <div class="border-b border-gray-200 dark:border-gray-700">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
          <%= link_to swarm_templates_path(tab: 'swarms'), 
              class: "#{params[:tab] != 'instance-templates' ? 'border-orange-900 dark:border-orange-500 text-orange-900 dark:text-orange-400' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-600 hover:text-gray-700 dark:hover:text-gray-200'} whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium transition-colors duration-200" do %>
            <%= heroicon "cube", variant: :mini, options: { class: "h-4 w-4 inline mr-1" } %>
            My Swarms
            <span class="ml-2 rounded-full <%= params[:tab] != 'instance-templates' ? 'bg-orange-100 dark:bg-orange-900/30 text-orange-900 dark:text-orange-400' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400' %> px-2.5 py-0.5 text-xs font-medium">
              <%= @swarm_templates.count %>
            </span>
          <% end %>
          
          <%= link_to swarm_templates_path(tab: 'instance-templates'), 
              class: "#{params[:tab] == 'instance-templates' ? 'border-orange-900 dark:border-orange-500 text-orange-900 dark:text-orange-400' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-600 hover:text-gray-700 dark:hover:text-gray-200'} whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium transition-colors duration-200" do %>
            <%= heroicon "puzzle-piece", variant: :mini, options: { class: "h-4 w-4 inline mr-1" } %>
            Instance Templates
            <span class="ml-2 rounded-full <%= params[:tab] == 'instance-templates' ? 'bg-orange-100 dark:bg-orange-900/30 text-orange-900 dark:text-orange-400' : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400' %> px-2.5 py-0.5 text-xs font-medium">
              <%= @instance_templates.count %>
            </span>
          <% end %>
        </nav>
      </div>
    </div>

    <% if params[:tab] == 'instance-templates' %>
      <!-- Instance Templates Tab Content -->
      <% if InstanceTemplate.any? %>
        <!-- Search and Filters -->
        <div class="mt-6">
          <div class="sm:flex sm:items-end sm:space-x-4">
            <div class="w-full sm:max-w-md">
              <%= form_with url: swarm_templates_path, method: :get, local: true do |f| %>
                <%= hidden_field_tag :tab, 'instance-templates' %>
                <%= text_field_tag :instance_search, params[:instance_search], 
                    placeholder: "Search templates...", 
                    class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-orange-600 dark:focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white dark:bg-gray-700 focus:outline-none" %>
              <% end %>
            </div>

            <% if @all_instance_tags&.any? %>
              <div class="mt-4 sm:mt-0">
                <div class="flex flex-wrap gap-2">
                  <% @all_instance_tags.each do |tag| %>
                    <% active = params[:instance_tag] == tag %>
                    <%= link_to swarm_templates_path(tab: 'instance-templates', instance_tag: active ? nil : tag, instance_search: params[:instance_search]), 
                        class: "inline-flex items-center rounded-md #{active ? 'bg-orange-900 dark:bg-orange-900 text-white' : 'bg-gray-50 dark:bg-gray-900/30 text-gray-700 dark:text-gray-400 ring-gray-600/20 dark:ring-gray-400/30'} px-3 py-1 text-xs font-medium ring-1 ring-inset #{active ? 'ring-orange-900 dark:ring-orange-900' : ''} hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200" do %>
                      <%= heroicon "tag", variant: :mini, options: { class: "h-3 w-3 mr-1" } %>
                      <%= tag %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <% if @instance_templates.any? %>
        <div class="mt-8 space-y-4">
          <% @instance_templates.each do |template| %>
            <div class="bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg p-6 border border-gray-200 dark:border-gray-700 transition-colors duration-200">
              <div class="flex items-center justify-between">
                <div class="flex items-start space-x-8 flex-1">
                  <div class="min-w-0 flex-1">
                    <div class="flex items-center space-x-3">
                      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">
                        <%= link_to template.name, instance_template_path(template), 
                            class: "hover:text-orange-900 dark:hover:text-orange-400" %>
                      </h3>
                      <% if template.system_template? %>
                        <span class="inline-flex items-center rounded-md bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400 ring-blue-600/20 dark:ring-blue-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset flex-shrink-0">
                          <%= heroicon "shield-check", variant: :mini, options: { class: "h-3 w-3 mr-1" } %>
                          System
                        </span>
                      <% end %>
                    </div>
                    <% if template.description.present? %>
                      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                        <%= template.description %>
                      </p>
                    <% end %>
                    <div class="mt-2 flex items-center space-x-6 text-sm text-gray-600 dark:text-gray-400">
                      <% if template.model.present? %>
                        <div class="flex items-center">
                          <%= heroicon "cpu-chip", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
                          <%= template.model %>
                        </div>
                      <% end %>
                      <% if template.provider.present? %>
                        <div class="flex items-center">
                          <%= heroicon "globe-alt", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
                          <%= template.provider.capitalize %>
                        </div>
                      <% end %>
                      <div class="flex items-center">
                        <%= heroicon "cube", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
                        Used in <%= pluralize(template.swarm_template_instances.count, 'swarm') %>
                      </div>
                    </div>
                    <% if template.tags&.any? %>
                      <div class="mt-2 flex flex-wrap gap-2">
                        <% template.tags.each do |tag| %>
                          <%= link_to tag, swarm_templates_path(tab: 'instance-templates', instance_tag: tag), 
                              class: "inline-flex items-center rounded-md bg-gray-50 dark:bg-gray-900/30 text-gray-700 dark:text-gray-400 ring-gray-600/20 dark:ring-gray-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset hover:bg-gray-100 dark:hover:bg-gray-800" %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="flex items-center space-x-2 ml-4 flex-shrink-0">
                  <%= link_to edit_instance_template_path(template), 
                      class: "inline-flex items-center justify-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-600 dark:text-gray-300 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
                    <%= heroicon "pencil", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
                    Edit
                  <% end %>
                  <% unless template.system_template? %>
                    <%= link_to duplicate_instance_template_path(template), 
                        data: { turbo_method: :post },
                        class: "inline-flex items-center justify-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-600 dark:text-gray-300 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
                      <%= heroicon "document-duplicate", variant: :mini, options: { class: "h-4 w-4" } %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="mt-8 text-center">
          <div class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500">
            <%= heroicon 'puzzle-piece', variant: :outline, options: { class: "h-12 w-12" } %>
          </div>
          <h3 class="mt-2 text-sm font-semibold text-gray-900 dark:text-gray-100">
            No instance templates
          </h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            Create reusable instance configurations for your swarms.
          </p>
          <div class="mt-6">
            <%= link_to new_instance_template_path, 
                class: "inline-flex items-center rounded-md bg-orange-900 dark:bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 dark:hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900 dark:focus-visible:outline-orange-900 transition-colors duration-200" do %>
              <%= heroicon "plus", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
              Create Instance Template
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Swarms Tab Content -->
      <% if SwarmTemplate.any? %>
        <!-- Search and Filters -->
        <div class="mt-6">
          <div class="sm:flex sm:items-end sm:space-x-4">
            <div class="w-full sm:max-w-md">
              <%= form_with url: swarm_templates_path, method: :get, local: true do |f| %>
                <%= text_field_tag :search, params[:search], 
                    placeholder: "Search swarms...", 
                    class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-orange-600 dark:focus:ring-orange-500 sm:text-sm sm:leading-6 bg-white dark:bg-gray-700 focus:outline-none" %>
              <% end %>
            </div>

            <% if @all_tags&.any? %>
              <div class="mt-4 sm:mt-0">
                <div class="flex flex-wrap gap-2">
                  <% @all_tags.each do |tag| %>
                    <% active = params[:tag] == tag %>
                    <%= link_to swarm_templates_path(tag: active ? nil : tag, search: params[:search]), 
                        class: "inline-flex items-center rounded-md #{active ? 'bg-orange-900 dark:bg-orange-900 text-white' : 'bg-gray-50 dark:bg-gray-900/30 text-gray-700 dark:text-gray-400 ring-gray-600/20 dark:ring-gray-400/30'} px-3 py-1 text-xs font-medium ring-1 ring-inset #{active ? 'ring-orange-900 dark:ring-orange-900' : ''} hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200" do %>
                      <%= heroicon "tag", variant: :mini, options: { class: "h-3 w-3 mr-1" } %>
                      <%= tag %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <% if @swarm_templates.any? %>
        <div class="mt-8 space-y-4">
          <% @swarm_templates.each do |swarm| %>
            <div class="bg-white dark:bg-gray-800 shadow dark:shadow-gray-700/50 rounded-lg p-6 border border-gray-200 dark:border-gray-700 transition-colors duration-200">
              <div class="flex items-center justify-between">
                <div class="flex items-start space-x-8 flex-1">
                  <div class="min-w-0 flex-1">
                    <div class="flex items-center space-x-3">
                      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">
                        <%= link_to swarm.name, swarm_template_path(swarm), 
                            class: "hover:text-orange-900 dark:hover:text-orange-400" %>
                      </h3>
                      <% if swarm.system_template? %>
                        <span class="inline-flex items-center rounded-md bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400 ring-blue-600/20 dark:ring-blue-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset flex-shrink-0">
                          System
                        </span>
                      <% end %>
                    </div>
                    <% if swarm.description.present? %>
                      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                        <%= swarm.description %>
                      </p>
                    <% end %>
                    <div class="mt-2 flex items-center space-x-6 text-sm text-gray-600 dark:text-gray-400">
                      <div class="flex items-center">
                        <%= heroicon "cube", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
                        <%= pluralize(swarm.instances.count, 'instance') %>
                      </div>
                      <% if swarm.usage_count > 0 %>
                        <div class="flex items-center">
                          <%= heroicon "rocket-launch", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
                          Used <%= pluralize(swarm.usage_count, 'time') %>
                        </div>
                      <% end %>
                      <% if swarm.updated_at %>
                        <div>
                          <span class="font-medium">Last updated:</span> <%= time_ago_in_words(swarm.updated_at) %> ago
                        </div>
                      <% end %>
                    </div>
                    <% if swarm.tags&.any? %>
                      <div class="mt-2 flex flex-wrap gap-2">
                        <% swarm.tags.each do |tag| %>
                          <%= link_to tag, swarm_templates_path(tag: tag), 
                              class: "inline-flex items-center rounded-md bg-gray-50 dark:bg-gray-900/30 text-gray-700 dark:text-gray-400 ring-gray-600/20 dark:ring-gray-400/30 px-2 py-1 text-xs font-medium ring-1 ring-inset hover:bg-gray-100 dark:hover:bg-gray-800" %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="flex items-center space-x-2 ml-4 flex-shrink-0">
                  <%= link_to launch_session_swarm_template_path(swarm), 
                      data: { turbo_method: :post },
                      class: "inline-flex items-center justify-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
                    <%= heroicon "play", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
                    Launch
                  <% end %>
                  <%= link_to edit_swarm_template_path(swarm), 
                      class: "inline-flex items-center justify-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-600 dark:text-gray-300 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
                    <%= heroicon "pencil", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
                    Edit
                  <% end %>
                  <%= link_to export_swarm_template_path(swarm, format: :yaml), 
                      class: "inline-flex items-center justify-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-600 dark:text-gray-300 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
                    <%= heroicon "arrow-up-tray", variant: :mini, options: { class: "h-4 w-4" } %>
                  <% end %>
                  <%= button_to swarm_template_path(swarm), 
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this swarm?" },
                      class: "inline-flex items-center justify-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-red-600 dark:text-red-400 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors duration-200" do %>
                    <%= heroicon "trash", variant: :mini, options: { class: "h-4 w-4" } %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="mt-8 text-center">
          <div class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500">
            <%= heroicon 'cube', variant: :outline, options: { class: "h-12 w-12" } %>
          </div>
          <h3 class="mt-2 text-sm font-semibold text-gray-900 dark:text-gray-100">
            No swarms yet
          </h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            Get started by creating your first swarm configuration.
          </p>
          <div class="mt-6">
            <% new_swarm_path = @project ? new_project_swarm_template_path(@project) : new_swarm_template_path %>
            <%= link_to new_swarm_path, 
                class: "inline-flex items-center rounded-md bg-orange-900 dark:bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 dark:hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900 dark:focus-visible:outline-orange-900 transition-colors duration-200" do %>
              <%= heroicon "plus", variant: :mini, options: { class: "h-4 w-4 mr-1" } %>
              Create Your First Swarm
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>