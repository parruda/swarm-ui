<% content_for :title, @swarm_template.name %>

<div class="py-8">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <div>
              <%= link_to @swarm_template.project || root_path, class: "text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400" do %>
                <%= heroicon "folder", variant: :outline, options: { class: "h-5 w-5 flex-shrink-0" } %>
                <span class="sr-only"><%= @swarm_template.project&.name || "Home" %></span>
              <% end %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <%= heroicon "chevron-right", variant: :solid, options: { class: "h-5 w-5 flex-shrink-0 text-gray-400" } %>
              <span class="ml-4 text-sm font-medium text-gray-500 dark:text-gray-400"><%= @swarm_template.name %></span>
            </div>
          </li>
        </ol>
      </nav>
      
      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="sm:flex-auto">
          <h1 class="text-2xl font-bold leading-7 text-gray-900 dark:text-gray-100 sm:truncate sm:text-3xl sm:tracking-tight"><%= @swarm_template.name %></h1>
          <% if @swarm_template.description.present? %>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= @swarm_template.description %></p>
          <% end %>
        </div>
        
        <div class="mt-4 flex items-center gap-x-3 sm:ml-16 sm:mt-0 sm:flex-none">
          <button type="button"
                  data-controller="launch-swarm"
                  data-action="click->launch-swarm#open"
                  data-launch-swarm-template-id-value="<%= @swarm_template.id %>"
                  data-launch-swarm-required-vars-value="<%= @swarm_template.required_environment_variables.to_json %>"
                  class="inline-flex items-center rounded-md bg-orange-900 dark:bg-orange-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 dark:hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900 dark:focus-visible:outline-orange-900 transition-colors duration-200">
            <%= heroicon "play", variant: :mini, options: { class: "h-5 w-5 mr-1.5" } %>
            Launch Session
          </button>
          
          <%= link_to edit_swarm_template_path(@swarm_template), class: "inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
            <%= heroicon "pencil", variant: :mini, options: { class: "h-5 w-5 mr-1.5" } %>
            Edit
          <% end %>
          
          <%= link_to duplicate_swarm_template_path(@swarm_template), method: :post, 
              class: "inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200" do %>
            <%= heroicon "document-duplicate", variant: :mini, options: { class: "h-5 w-5 mr-1.5" } %>
            Duplicate
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
      <!-- Left panel - Swarm Details -->
      <div class="lg:col-span-2">
        <div class="bg-white dark:bg-gray-800 shadow-sm ring-1 ring-gray-900/5 dark:ring-gray-700 sm:rounded-xl">
          <div class="px-4 py-6 sm:p-8">
            <!-- Basic Details -->
            <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 mb-4">Details</h3>
            
            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Visibility</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                  <%= @swarm_template.public? ? "Public" : "Private" %>
                </dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Project</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                  <% if @swarm_template.project %>
                    <%= link_to @swarm_template.project.name, @swarm_template.project, 
                        class: "text-orange-600 dark:text-orange-400 hover:text-orange-700 dark:hover:text-orange-300" %>
                  <% else %>
                    <span class="text-gray-500 dark:text-gray-400">General Purpose</span>
                  <% end %>
                </dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Instances</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                  <%= pluralize(@swarm_template.instances.count, 'instance') %>
                </dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Usage Count</dt>
                <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                  <%= @swarm_template.usage_count %> times
                </dd>
              </div>
              
              <% if @swarm_template.tags&.any? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Tags</dt>
                  <dd class="mt-1">
                    <div class="flex flex-wrap gap-2">
                      <% @swarm_template.tags.each do |tag| %>
                        <span class="inline-flex items-center rounded-full bg-gray-100 dark:bg-gray-700 px-2.5 py-0.5 text-xs font-medium text-gray-700 dark:text-gray-300">
                          <%= tag %>
                        </span>
                      <% end %>
                    </div>
                  </dd>
                </div>
              <% end %>
              
              <% if @swarm_template.required_environment_variables.any? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Required Environment Variables</dt>
                  <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
                    <div class="flex flex-wrap gap-2">
                      <% @swarm_template.required_environment_variables.each do |var| %>
                        <span class="inline-flex items-center rounded bg-gray-100 dark:bg-gray-700 px-2 py-1 text-xs font-medium text-gray-800 dark:text-gray-200">
                          $<%= var %>
                        </span>
                      <% end %>
                    </div>
                  </dd>
                </div>
              <% end %>
            </dl>
            
            <!-- Instances -->
            <div class="mt-8 border-t border-gray-200 dark:border-gray-700 pt-8">
              <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100 mb-4">Instances</h3>
              
              <div class="space-y-4">
                <% @swarm_template.instances.each do |key, config| %>
                  <div class="relative rounded-lg border <%= key == @swarm_template.main_instance ? 'border-orange-500 dark:border-orange-400' : 'border-gray-300 dark:border-gray-600' %> bg-white dark:bg-gray-700 px-4 py-4 shadow-sm">
                    <% if key == @swarm_template.main_instance %>
                      <div class="absolute -top-2 -right-2 bg-orange-500 text-white text-xs px-2 py-1 rounded">Main</div>
                    <% end %>
                    
                    <h4 class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= key %></h4>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= config['description'] || 'No description' %></p>
                    
                    <div class="mt-3 flex flex-wrap gap-2">
                      <span class="inline-flex items-center rounded-full bg-blue-100 dark:bg-blue-900 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:text-blue-200">
                        <%= config['model'] || 'sonnet' %>
                      </span>
                      <span class="inline-flex items-center rounded-full bg-gray-100 dark:bg-gray-700 px-2.5 py-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">
                        <%= config['directory'] || '.' %>
                      </span>
                      <% if config['allowed_tools']&.any? %>
                        <span class="inline-flex items-center rounded-full bg-green-100 dark:bg-green-900 px-2.5 py-0.5 text-xs font-medium text-green-800 dark:text-green-200">
                          <%= pluralize(config['allowed_tools'].count, 'tool') %>
                        </span>
                      <% end %>
                    </div>
                    
                    <% if config['connections']&.any? %>
                      <div class="mt-3">
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300">Connects to:</span>
                        <div class="mt-1 flex flex-wrap gap-1">
                          <% config['connections'].each do |conn| %>
                            <span class="inline-flex items-center rounded px-2 py-1 text-xs font-medium bg-orange-100 dark:bg-orange-900 text-orange-800 dark:text-orange-200">
                              <%= conn %>
                            </span>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right panel - Actions & YAML -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Delete Action -->
        <div class="bg-white dark:bg-gray-800 shadow-sm ring-1 ring-gray-900/5 dark:ring-gray-700 sm:rounded-xl">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-base font-medium text-gray-900 dark:text-gray-100">Delete Swarm Template</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              Permanently remove this swarm template. This cannot be undone.
            </p>
            <%= button_to swarm_template_path(@swarm_template), method: :delete,
                data: { turbo_confirm: "Are you sure? This will permanently delete this swarm template." },
                class: "mt-4 inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" do %>
              <%= heroicon "trash", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
              Delete Template
            <% end %>
          </div>
        </div>
        
        <!-- YAML Configuration -->
        <div class="bg-white dark:bg-gray-800 shadow-sm ring-1 ring-gray-900/5 dark:ring-gray-700 sm:rounded-xl">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-base font-medium text-gray-900 dark:text-gray-100 mb-4">YAML Configuration</h3>
            
            <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-4 font-mono text-xs overflow-x-auto max-h-[400px] overflow-y-auto">
              <pre class="text-gray-700 dark:text-gray-300"><%= @swarm_template.to_yaml %></pre>
            </div>
            
            <button type="button"
                    onclick="navigator.clipboard.writeText(this.dataset.yaml)"
                    data-yaml="<%= @swarm_template.to_yaml %>"
                    class="mt-4 inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200">
              <%= heroicon "clipboard-document", variant: :mini, options: { class: "h-4 w-4 mr-1.5" } %>
              Copy YAML
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>