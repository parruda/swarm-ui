<%= turbo_frame_tag "webhook_commands_modal" do %>
  <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-5xl max-h-[90vh] overflow-hidden">
      <div class="p-6 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Manage Webhook Commands</h2>
        <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
          Configure custom commands that trigger specific swarms via GitHub webhooks
        </p>
      </div>

      <%= form_with url: project_webhook_commands_path(@project), method: :patch, 
                    data: { turbo_frame: "_top" }, 
                    class: "flex flex-col h-full" do |f| %>
        
        <div class="flex-1 overflow-y-auto p-6">
          <% if @project.has_orphaned_webhook_commands? %>
            <div class="mb-6 p-4 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg">
              <div class="flex items-start">
                <%= heroicon "exclamation-triangle", options: { class: "h-5 w-5 text-yellow-600 dark:text-yellow-400 mt-0.5 mr-2 flex-shrink-0" } %>
                <div>
                  <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
                    Orphaned Commands Detected
                  </h3>
                  <p class="mt-1 text-sm text-yellow-700 dark:text-yellow-300">
                    Some commands are associated with swarm files that no longer exist. These commands will not work until you update them.
                  </p>
                </div>
              </div>
            </div>
          <% end %>

          <div class="space-y-6" data-controller="webhook-commands">
            <div class="flex justify-between items-center">
              <label class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-100">
                Webhook Commands
              </label>
              <button type="button"
                      data-action="click->webhook-commands#addCommand"
                      class="inline-flex items-center gap-2 rounded-md bg-white dark:bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200">
                <%= heroicon "plus", options: { class: "h-4 w-4" } %>
                Add Command
              </button>
            </div>

            <div class="space-y-4">
              <div data-webhook-commands-target="commandList" class="space-y-4">
                <% (@commands || []).each_with_index do |command, index| %>
                  <div class="command-entry <%= command['valid'] ? '' : 'bg-yellow-50 dark:bg-yellow-900/10' %> p-4 rounded-lg border <%= command['valid'] ? 'border-gray-200 dark:border-gray-700' : 'border-yellow-300 dark:border-yellow-700' %>" 
                       data-webhook-commands-target="commandEntry">
                    
                    <% unless command['valid'] %>
                      <div class="mb-3 flex items-center text-yellow-600 dark:text-yellow-400">
                        <%= heroicon "exclamation-triangle", options: { class: "h-4 w-4 mr-1" } %>
                        <span class="text-sm font-medium">Swarm file not found - Please update or remove this command</span>
                      </div>
                    <% end %>

                    <div class="grid grid-cols-12 gap-4">
                      <div class="col-span-4">
                        <label class="block text-sm font-medium leading-6 text-gray-900 dark:text-gray-100 mb-2">
                          Command
                        </label>
                        <div class="relative">
                          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 dark:text-gray-400 font-mono">/</span>
                          <input type="text" 
                                 name="commands[][command]"
                                 value="<%= command['command']&.sub(/^\//, '') %>"
                                 placeholder="review"
                                 data-action="input->webhook-commands#normalizeCommand"
                                 class="pl-8 pr-3 block w-full rounded-md border-gray-300 dark:border-gray-600 py-[0.5rem] text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 focus:outline-none focus:ring-0 focus:border-orange-600 dark:focus:border-orange-500 text-sm leading-5 font-mono transition-colors duration-200">
                        </div>
                      </div>

                      <div class="col-span-7">
                        <label class="block text-sm font-medium leading-6 text-gray-900 dark:text-gray-100 mb-2">
                          Swarm Configuration File
                        </label>
                        <select name="commands[][swarm_path]"
                                class="block w-full rounded-md border-gray-300 dark:border-gray-600 py-[0.5rem] px-3 text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 focus:outline-none focus:ring-0 focus:border-orange-600 dark:focus:border-orange-500 text-sm leading-5 transition-colors duration-200">
                          <option value="">Select a swarm file...</option>
                          <% @swarm_files.each do |swarm| %>
                            <option value="<%= swarm[:relative_path] %>" 
                                    <%= 'selected' if command['swarm_path'] == swarm[:relative_path] %>>
                              <%= swarm[:relative_path] %> - <%= swarm[:name] %>
                            </option>
                          <% end %>
                        </select>
                      </div>

                      <div class="col-span-1 flex items-end justify-center pb-1">
                        <button type="button"
                                data-action="click->webhook-commands#removeCommand"
                                class="p-2 text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors">
                          <%= heroicon "trash", options: { class: "h-5 w-5" } %>
                        </button>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="<%= (@commands || []).empty? ? '' : 'hidden' %> text-center py-8 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg" data-webhook-commands-target="emptyState">
                <%= heroicon "command-line", options: { class: "mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" } %>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                  No webhook commands configured yet
                </p>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-500">
                  Add commands to trigger specific swarms from GitHub comments
                </p>
              </div>
            </div>

            <template data-webhook-commands-target="commandTemplate">
              <div class="command-entry p-4 rounded-lg border border-gray-200 dark:border-gray-700" 
                   data-webhook-commands-target="commandEntry">
                <div class="grid grid-cols-12 gap-4">
                  <div class="col-span-4">
                    <label class="block text-sm font-medium leading-6 text-gray-900 dark:text-gray-100 mb-2">
                      Command
                    </label>
                    <div class="relative">
                      <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 dark:text-gray-400 font-mono">/</span>
                      <input type="text" 
                             name="commands[][command]"
                             placeholder="review"
                             data-action="input->webhook-commands#normalizeCommand"
                             class="pl-8 pr-3 block w-full rounded-md border-gray-300 dark:border-gray-600 py-2 text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 focus:outline-none focus:ring-0 focus:border-orange-600 dark:focus:border-orange-500 text-sm font-mono transition-colors duration-200">
                    </div>
                  </div>

                  <div class="col-span-7">
                    <label class="block text-sm font-medium leading-6 text-gray-900 dark:text-gray-100 mb-2">
                      Swarm Configuration File
                    </label>
                    <select name="commands[][swarm_path]"
                            class="block w-full rounded-md border-gray-300 dark:border-gray-600 py-2 px-3 text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 focus:outline-none focus:ring-0 focus:border-orange-600 dark:focus:border-orange-500 text-sm transition-colors duration-200">
                      <option value="">Select a swarm file...</option>
                      <% @swarm_files.each do |swarm| %>
                        <option value="<%= swarm[:relative_path] %>">
                          <%= swarm[:relative_path] %> - <%= swarm[:name] %>
                        </option>
                      <% end %>
                    </select>
                  </div>

                  <div class="col-span-1 flex items-end justify-center pb-1">
                    <button type="button"
                            data-action="click->webhook-commands#removeCommand"
                            class="p-2 text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors">
                      <%= heroicon "trash", options: { class: "h-5 w-5" } %>
                    </button>
                  </div>
                </div>
              </div>
            </template>
          </div>
        </div>

        <div class="p-6 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50">
          <div class="flex justify-end space-x-3">
            <a href="<%= project_path(@project, tab: 'github') %>"
               data-turbo-frame="_top"
               class="inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-4 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-200">
              Cancel
            </a>
            <button type="submit"
                    class="inline-flex items-center rounded-md bg-orange-900 dark:bg-orange-900 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-800 dark:hover:bg-orange-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-900 dark:focus-visible:outline-orange-900 transition-colors duration-200">
              Save Commands
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>